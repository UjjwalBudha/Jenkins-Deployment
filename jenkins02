pipeline {
    agent any
    environment {
        DOCKER_USERNAME = 'ujjwalbudha000'
        DOCKER_PASSWORD = 'Jszg8sL@8ZD7EHb'
    }
    stages {
        stage("Build Nodejs Image") {
            steps {
                bat 'docker build -t nodejs .'
                bat 'docker images'
                bat 'docker ps'
            }
        }
        stage("Delivery of Image to Docker Hub") {
            steps {
                bat 'docker login -u %DOCKER_USERNAME% -p %DOCKER_PASSWORD%'
                bat 'docker tag nodejs:latest ujjwalbudha000/myrepo:v9'
                bat 'docker push ujjwalbudha000/myrepo:v9'
            }
        }
        stage ("Deployment to Minikube") {
            steps {
                bat 'kubectl delete -f k8s.yml'
                bat 'kubectl apply -f k8s.yml'
            }
        }
    }
}
