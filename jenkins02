pipeline {
    agent any
    environment {
        DOCKER_USERNAME = 'ujjwalbudha000'
        DOCKER_PASSWORD = 'Jszg8sL@8ZD7EHb'
        PEM_CONTENT = 'MIIEpAIBAAKCAQEAuE1z77NRZR5gRpEWMjkLgfqOn4GJi3UTNCmydPWNPBHKIIFA...'
        INSTANCE_IP = '100.24.5.4'
    }
    stages {
        stage("Build Nodejs Image") {
            steps {
                bat 'docker build -t nodejs .'
                bat 'docker images'
                bat 'docker ps'
            }
        }
        stage("Delivery of Image to Docker Hub") {
            steps {
                bat 'docker login -u %DOCKER_USERNAME% -p %DOCKER_PASSWORD%'
                bat 'docker tag nodejs:latest ujjwalbudha000/myrepo:v9'
                bat 'docker push ujjwalbudha000/myrepo:v9'
            }
        }

        stage("Deployment to Kubernetes") {
            steps {
                sh "echo '${PEM_CONTENT}' > aws-ec2-pem.pem"
                sh "chmod 400 aws-ec2-pem.pem"
                sh "ssh -i aws-ec2-pem.pem -o StrictHostKeyChecking=no ubuntu@${INSTANCE_IP} 'kubectl delete -f rep01.yml'"
                sh "ssh -i aws-ec2-pem.pem -o StrictHostKeyChecking=no ubuntu@${INSTANCE_IP} 'kubectl create -f rep01.yml'"
                sh "rm -f aws-ec2-pem.pem"
            }
        }
    }
}
