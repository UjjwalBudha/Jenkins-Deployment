pipeline {
    agent any
    stages {
        stage("List Files") {
            steps {
                bat 'echo Current directory:'
                bat 'dir'
            }
        }

        stage("Build Nodejs Image") {
            steps {
                bat 'docker build -t nodejs .'
                bat 'docker ps'
            }
        }

        stage("Delivery of Image to Docker Hub") {
            steps {
                bat 'docker image tag nodejs ujjwalbudha000/nodejs:1.0'
                bat 'docker push ujjwalbudha000/nodejs:1.0'
            }
        }

       
        }
    }
}
