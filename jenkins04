pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIAL = credentials('docker_cred')
        SSH_CREDENTIAL = credentials('ssh_secret_file_id')
    }
    stages {
        stage("Build Nodejs Image") {
            steps {
                sh 'docker build -t nodejs .'
                sh 'docker images'
                sh 'docker ps'
            }
        }
        stage("Delivery of Image to Docker Hub") {
            steps {
                sh 'docker login -u ${DOCKERHUB_CREDENTIAL_USR} -p ${DOCKERHUB_CREDENTIAL_PSW}'
                sh 'docker tag nodejs:latest ujjwalbudha000/myrepo:v9'
                sh 'docker push ujjwalbudha000/myrepo:v9'
            }
        }
        stage("Deployment to Minikube") {
            steps {
                
                sh "scp -i ${SSH_CREDENTIAL} -o StrictHostKeyChecking=no k8s.yml ubuntu@107.22.133.52:/home/ubuntu/"
                sh 'ssh -i ${SSH_CREDENTIAL} -o StrictHostKeyChecking=no ubuntu@107.22.133.52 "kubectl delete -f rep01.yml"'
                sh 'ssh -i ${SSH_CREDENTIAL} -o StrictHostKeyChecking=no ubuntu@107.22.133.52 "kubectl create -f rep01.yml"'
            }
        }
    }
}
